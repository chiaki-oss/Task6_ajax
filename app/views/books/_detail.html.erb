<!-- profile-img / Users詳細 -->
<td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "100x100" %><br>
	<%= link_to book.user.name, user_path(book.user) %>
</td>
<td><%= book.title %></td>
<td><%= book.body %></td>

<!-- favorites -->
<td id="favorite-<%= book.id %>" >
	<%= render partial: "favorites/favorite", locals:{book: book} %>
</td>

<!-- comment count -->
<td><%= "コメント数 : #{book.book_comments.count}" %></td>
<% if book.user == current_user %>
<td><%= link_to "Edit", edit_book_path(book),class:"btn-sm btn-success" %></td>
<td><%= link_to "Destroy", book_path(book), method: :delete, remote: true, class:"btn-sm btn-danger" %></td>
<% end %>