<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% books.each do |book| %>
		<tr>
			<!-- profile-img / Users詳細へ -->
			<td>
				<%= link_to user_path(book.id) do %>
				<%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", class: "pull-left profile-img", size:"40x40" %>
				<% end %>
			</td>
			<!-- title / Books詳細画面へ -->
			<td class="title">
				<%= link_to book.title, book_path(book.id)  %>
			</td>
			<td class="body"><%= book.body %></td>

			<!-- favorites -->
			<td id="favorite-<%= book.id %>" >
			<%= render partial: "favorites/favorite", locals:{book: book} %></td>

			<!-- comment -->
			<td> <%= "コメント数 : #{book.book_comments.count}" %></td>

		</tr>
		<% end %>
	</tbody>
</table>