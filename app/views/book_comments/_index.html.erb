<% book.book_comments.each do |book_comment| %>
<tr>
	<td><%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %><br>
		<%= book_comment.user.name %></td>
	<td><%= book_comment.comment %></td>

	<!-- delete comment -->
	<% if book_comment.user == current_user %>
	<td><%= link_to book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete, remote: true, class: "btn-sm btn-danger" do %>Destroy
		<% end %>
	</td>
	<% end %>
</tr>
<% end %>